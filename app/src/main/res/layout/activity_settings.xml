<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.uwr1.training.SettingsActivity"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame">

    <fragment
        android:name="de.uwr1.training.SettingsFragment"
        android:id="@+id/fragment_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <fragment
        android:name="de.uwr1.training.VersionFragment"
        android:id="@+id/fragment_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        tools:layout="@layout/fragment_version" />

</LinearLayout>
